{
  "presets": ["next/babel"],
  "plugins": [
    [
      "styled-components",
      { "ssr": true, "displayName": true, "preprocess": false }
    ],
    [
      "@babel/plugin-transform-react-jsx",
      {
        "pragmaFrag": "React.Fragment"
      }
    ]
  ],
  "env" : {
    "test" : {
      "plugins": [
        [
          "babel-plugin-styled-components",
          {
            "ssr" : false,
            "displaName": false
          }
        ]
      ]
    }
  }
}
